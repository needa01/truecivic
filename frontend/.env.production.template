# Production Environment Variables for Railway
# These should be set in Railway Dashboard → Settings → Variables

# API Endpoint (update with your actual Railway API service URL)
NEXT_PUBLIC_API_URL=https://your-api-service.up.railway.app/api/v1/ca

# Cloud overrides for local development. These can remain enabled in production.
NEXT_PUBLIC_USE_CLOUD_API=true
NEXT_PUBLIC_CLOUD_API_URL=https://your-api-service.up.railway.app/api/v1/ca
# NEXT_PUBLIC_CLOUD_API_KEY=your-production-api-key

# Local fallback if you run the API alongside the frontend in staging
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:8000/api/v1/ca

# Node Environment
NODE_ENV=production
